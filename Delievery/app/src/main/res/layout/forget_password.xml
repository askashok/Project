<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listpressed">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY ORDER MANAGEMENT"
            android:textColor="#fff"
            android:textSize="@dimen/margin_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_title"
        android:layout_marginTop="@dimen/margin_size">

        <EditText
            android:id="@+id/edit_GetMailID"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_top"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18dp"
            android:background="@drawable/rect_edit_txt"
            android:hint="Enter your E-MAIL ID"
            android:paddingLeft="@dimen/margin_size10"
            android:textColor="#cfcfcf"
            android:textColorHint="@color/text_color" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_email">

        <Button
            android:id="@+id/button_GetMailID"
            android:layout_width="150dp"
            android:layout_height="@dimen/margin_top"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/margin_size"
            android:background="@color/listdefault"
            android:text="Send password"
            android:textAllCaps="false"
            android:textColor="#cfcfcf"
            android:textSize="16sp" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size10"
        android:layout_marginRight="@dimen/margin_size11"
        android:layout_marginTop="@dimen/edit_txt_img1"
        android:textColor="#cfcfcf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/dummy"
        android:layout_marginTop="30dp">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-7552428963008526/7313099897" />
    </LinearLayout>

</RelativeLayout>

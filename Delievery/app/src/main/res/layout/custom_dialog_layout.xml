<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="300dp"
    android:layout_height="@dimen/cust_dialog_layout_hght"
    android:layout_centerHorizontal="true"
    android:background="@color/listdefault">

    <TextView
        android:id="@+id/text_edit_or_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/btn_mar_top"
        android:text="do u want to exit the application"
        android:textColor="#fff"
        android:textSize="@dimen/text_text_size" />

    <Button
        android:id="@+id/button_yes"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_edit_or_delete"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_positive_button"
        android:text="Yes"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_no"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_edit_or_delete"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/button_yes"
        android:background="@drawable/rounded_negative_button"
        android:text="No"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="17dp"
        android:textStyle="bold" />


</RelativeLayout>
